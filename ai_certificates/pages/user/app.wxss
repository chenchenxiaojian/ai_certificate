page {
  /* height: 800px; */
  height: 100%;
  font-family: 'Microsoft Yahei';
}


.van-button--square {
  width: 100% !important;
  background-color: #7979f8 !important;
  border: none !important;
}

.van-submit-bar__text {
  text-align: left !important;
  margin-left: 30px !important;
}

.van-tabbar-item__text {
  /*自定义tarbar文字类型*/
  color: #CDCDCD;
  font-weight: 700;
}

.van-tabbar-item__text .active {
  /*自定义tarbar文字类型*/
  color: #7979F8;
  font-weight: 700;
}

.outer-circular {
  width: 85px;
  height: 85px;
  background-color: #fff;
  /* border: 1px solid gray; */
  border-radius: 50%;
  position: relative;
  top: -20px;
}

.inner-circular {
  width: 65px;
  height: 65px;
  background-color: #7979F8;
  border: none;
  /* border: 10px solid rgb(255, 255, 255); */
  box-shadow: 0px 0px 4px 4px rgb(255, 255, 255) inset;
  border-radius: 50%;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.inner-circular:active {
  background-color: rgba(238, 7, 7, 0.618);
}

.white-circular {
  width: 70%;
  height: 70%;
  border-radius: 50%;
  background: transparent;
  border: 1px solid #fff;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}