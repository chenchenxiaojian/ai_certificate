/* pages/physical_order/physical_order.wxss */
.accept-type {
    width: 100%;
    display: flex;
    height: 50px;
    background-color: #fff;
}

.accept-type view {
    flex: 1;
    text-align: center;
    font-weight: 700;
    line-height: 50px;
}

.address-info {
    width: 100%;
    /* height: 50px; */
    background-color: #fff;
    border-radius: 15px;
    padding: 10px 0 15px 10px;
    margin-top: 10px;
    position: relative;
    max-height: 50px;
}

.address-info view {
    margin-right: 30px;
}

.address-info image,
.store-info image {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 50%;
    right: 25px;
    transform: translateY(-50%);
}

.address-detail {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-weight: 600;
    max-height: 44px;
}

.store-info {
    width: 100%;
    background-color: #fff;
    border-radius: 15px;
    padding: 10px 0 20px 10px;
    margin-top: 10px;
    position: relative;
    max-height: 50px;
}

.store-detail {
    width: 85%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-weight: 600;

}

.popup-store-detail {
    /* background-color: #f2f2f2; */

    margin: 10px 0 10px 10px;
}

.popup-store-detail view {
    width: 80%;
    height: 35px;
    position: relative;
}

.popup-store-detail view image {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.popup-store-detail view text {
    position: relative;
    left: 30px;
    line-height: 35px;
    font-weight: 600;
    font-size: small;
    color: gray;
}

.more-size {
    height: 80px;
    width: 100%;
    background-color: #fff;
    border-radius: 15px;
    margin-top: 10px;
}

.more-size view {
    width: 60%;
    margin: 0 auto;
    border: 2px solid #7979F8;
    border-radius: 10px;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5px;
}

.more-size view image {
    width: 30px;
    height: 30px;
}

.more-size view text {
    margin-left: 5px;
    color: #7979F8;
    font-weight: 700;
}

.select-spec {
    height: 100px;
    background-color: #fff;
    margin-top: 15px;
    width: 100%;
    border-radius: 15px;
    position: relative;
}

.select-spec image {
    width: 70px;
    height: 70px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 15px;
}

.select-spec .select-spec-info {
    width: 150px;
    height: 70px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 100px;
    display: flex;
    flex-direction: column;
}
.select-spec .select-spec-info view{
    flex:1;
    line-height: 35px;
}
.van-stepper__input{
    color: #7979F8 !important;
    font-weight: 700;
}