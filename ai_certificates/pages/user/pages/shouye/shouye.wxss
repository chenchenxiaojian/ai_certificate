/* pages/shouye/shouye.wxss */
.page-bg{
    height: 100%;
    background-color: #f2f2f27e;
    min-height: 900px;
    max-width: 100%;
    overflow-x: hidden;
}
.page-header{
    width: 100%;
    height: 200px;
    /* background-color: black; */
}
.page-content{
    position: relative;
    /* bottom: 60px; */
}

.normal-fontsize{
    font-size: 14px;
    font-weight: 700;
}
.font-color{
    color: #B5B5B5;
}
.title-text{
    position: relative;
    padding-bottom: 40px;
    top: 30px;
    left: 11%;
}
.regular-size{
    width: 80%;
    height: 280px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-wrap: wrap;
}
.regular-size-container{
    position: relative;
    width: 46%;
    height: 130px;
    margin-left: 1%;
    margin-right: 1%;
    box-shadow: 1px 1px 1px 1px rgba(223, 222, 222, 0.705);

}
.regular-size view image{
    width: 60px;
    height: 50px;
    position: relative;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-block;
}
.regular-size .text{
    width: 60px;
    position: relative;
    left: 50%;
    top: 10px;
    text-align: center;
    transform: translateX(-50%);
    font-weight: 900;
}
.regular-size .size{
    /* width: 80px; */
    position: relative;
    text-align: center;
    color: #B5B5B5;
    font-size: small;
    left: 50%;
    top: 20px;
    transform: translateX(-50%);
    font-weight: 900;
}

.other-size{
    width: 80%;
    height: 100px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;

}
.other-size view{
    text-align: center;
    color: #fff;
    width: 40%;
    margin:5%;
    height: 30%;
    background-color: #7979F8;
    border-radius: 10px;
    font-size: small;
    font-weight: 600;
    box-shadow: 0px 0px 3px 1px #7979f84a;
    display: flex;
    align-items: center;
    justify-content: center;
}
