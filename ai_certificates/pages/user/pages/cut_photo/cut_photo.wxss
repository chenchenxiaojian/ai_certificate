/* pages/cut_photo/cut_photo.wxss */
page {
    background-color: #f2f2f2;
}

.image {
    width: 100%;
    height: 65%;
    margin: 0 auto;
    position: relative;
    background-color: rgb(232, 228, 228);
}

.image image {
    height: 90%;
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 5px;
}

.btn-contain {
    height: 130px;
    margin-top: 20px;
    width: 100%;
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: center;
    position: relative;
}

.btn-contain view {
    flex: 1;
}

.btn-contain view view {
    display: flex;
    justify-content: center;
}

.btn-contain view view image {
    width: 40px;
    height: 40px;
}

.beautify {
    height: 130px;
}

.button-contain {
    display: flex;
    align-items: center;
    justify-content: center;
}

.button-contain view {
    flex: 1;
}

.button-contain view view {
    display: flex;
    justify-content: center;
}

.button-contain view view image {
    width: 30px;
    height: 30px;
    padding: 10px;

    border-radius: 50%;
    /* background-color: #7979F8; */
}

.van-slider__button {
    /* 进度条圆形按钮的颜色*/
    /* 7979F8 */
    background-color: #7979F8 !important;
    /* 7979F8 */
}

.slider-value {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    background-color: #7979F8;
    width: 30px;
    height: 30px;
    line-height: 30px;
    border-radius: 5px;
    font-weight: 700;
    text-align: center;
}

.loading {
    position: absolute;
    width: 200px;
    height: 200px;
    background-color: rgba(0, 0, 0, 0.323);
    left: 50%;
    top: 30%;
    transform: translate(-50%, -50%);
    z-index: 1000;
    text-align: center;
    color: white
}

.choosebg {
    height: 130px;
    display: flex;
}

.choosebg view view image {
    width: 40px;
    height: 40px;
}

.choosebg view {
    flex: 1;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
}

.confirm {
    width: 100%;
    height: 50px;
    background-color: #7979f8;
    text-align: center;
    line-height: 50px;
    font-size: large;
    color: #fff;
    margin-top: 30px;
}
.confirm:hover{
    background-color: #4242e8;
}

.clothes {
    height: 170px;
}

.clothes-header {
    height: 35px;
    display: flex;
}

.clothes-header text {
    flex: 1;
    text-align: center;
    line-height: 35px;
    font-weight: 700;
    color: #7979f8;
}

.scroll-item {
    white-space: normal;
    width: 100px;
    height: 120px;
    display: inline-block;
    margin-right: 5px;
    text-align: center;
    font-size: small;
}

.scroll-item image {
    width: 100%;
    /* position: relative;
    left: 50%;
    transform: translateX(-50%); */
    height: 90px;
}

.scroll-item text {
    height: 20px;
}

