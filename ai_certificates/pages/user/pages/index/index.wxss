/* pages/login/login.wxss */

.page-bg{
    position: relative;
    background-color: #e5edef9e;
    /* height: 100%; */
    min-height: 730px;

}
.page-font-color{
    color: #0000ff83;
    font-weight: 700;
}

.page-fontsize-normal{
    font-size: 15px;
}
.page-fontsize-large{
    font-size: 25px;
}
.page-header{
    width: 100%;
    height: 192px;
    /* background-color: black; */
}
.page-header image{
    width: 130px;
    height: 130px;
    position: relative;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.page-content{
    width: 100%;
    height: 432px;
    /* background-color: blue; */
}
.page-content .login,
.page-content .register,
.page-content .forgetPassword,
.page-content .quick-login-by-phone{
    width: 80%;
    margin: 0 auto;
    position: relative;
}
.page-footer{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 30px;
    font-size: small;
    font-weight: 700;
    color: #b5b5bdb1;
    text-align: center;
}
.position-right{
    position: absolute;
    right: 0;
   
}
.position-left{
    position: relative;
    left: 0;
}
.van-cell{   /*输入框的样式*/
    border-radius: 10px;
    margin-top: 15px;
    /* margin-bottom: 10px; */
    box-shadow: 1px 1px 1px 1px #7c7cf21e;
    max-height: 50px !important;
}
.normalbutton {  /*自定义按钮van-button的样式*/
    min-width: 100% !important;
    margin-top: 15px;
    letter-spacing: 10px;
    margin-bottom: 5px;
    border-radius: 10px !important;
    color: #fff !important;
    background-color:#0000ff7b !important;
    box-shadow: 1px 1px 1px 1px #7c7cf21e !important;
}
.yanzhen-button{
    max-width: 80px !important;
    border-radius: 20px !important;
    background-color: #0000ff83 !important;
}
.other-login{
    display: flex;
    justify-content: center;
    align-items: center;   
    width: 100%;
    height: 32px;
    margin-top: 10px;
}
.other-login van-icon{
    flex:1;
    text-align: center;
}














/* UI样式 */
.input-class{
    border-radius: 10px;
    
}
