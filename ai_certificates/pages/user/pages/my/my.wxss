.page-bg {
    height: 100%;
    width: 100%;
    background-color: #F2F2F2;
}

.page-header {
    height: 64px;
    position: relative;
    background-color: #fff;
    font-size: 20px;
    font-weight: 700;
    line-height: 64px;
    text-align: center;
}

.page-content {
    width: 100%;
    height: 70%;
    position: relative;
}

.page-content-header {
    width: 100%;
    height: 30%;
    margin-top: 20px;
    position: relative;
}

.page-content-header view .user-logo {
    width: 40%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.page-content-header view .user-logo image {
    height: 80px;
    width: 80px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.page-content-header view .user-info {
    width: 60%;
    height: 100%;
    position: absolute;
    left: 40%;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: left;
    flex-direction: column;
    flex-wrap: wrap;
    white-space: nowrap;
    text-overflow: ellipsis;
}


.page-content-header button {
    color: #fff;
    background-color: #7979F8;
}

.page-content-header button:active {
    background-color: #4a4af2fa;
}

.position-center {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}


.page-content-body {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.page-content-body view {
    width: 80%;
    margin: 0 auto;
    height: 50px;
    border-bottom: 1px solid #e2dfdf;
}

.page-content-body view text {
    line-height: 50px;
    font-size: 17px;
    font-weight: 600;
    color: gray;
}

.page-content-body view image {
    line-height: 50px;
    width: 17px;
    height: 17px;
    float: right;
    top: 50%;
    transform: translateY(-50%);
    position: relative;

}