/* pages/photo_size_info/photo_size_info.wxss */
.page-bg {
    height: 100%;
    min-height: 600px;
    background-color: #f2f2f27e;
}

.lunbo {
    position: absolute;
    top: 50px;
    width: 100%;
    height: 300px;
    /* background-color: black; */
}

.size-info {
    width: 80%;
    left: 10%;
    background-color: #fff;
    border-radius: 10px;
    height: 150px;
    position: absolute;
    top: 350px;

}

.info-data {
    font-size: 13px;
    color: gray;
    font-weight: 700;
    margin-left: 5px;

}

.btn-container {
    position: absolute;
    top: 510px;
    width: 80%;
    left: 10%;
    height: 50px;
    /* background-color: #000; */
}

.btn-container view {
    width: 45%;
    display: inline-block;
    /* background-color: gray; */
    border-radius: 15px;
    position: relative;
    margin-left: 5px;
    margin-right: 5px;
    text-align: center;
}

.btn-container view image {
    width: 35px;
    height: 35px;
    position: absolute;
    top: 50%;
    left: 8%;
    transform: translateY(-50%);
    margin-right:10px;
    
}
.btn-container view text{
    line-height: 50px;
    font-size: 15px;
    font-weight: 600;
    margin-left: 35%;
}