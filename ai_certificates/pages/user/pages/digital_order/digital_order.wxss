/* pages/digital_order/digital_order.wxss */
.order-info {
    width: 100%;
    height: 160px;
    top: 15px;
    background-color: #fff;
    position: relative;
}

.order-info view image {
    width: 80%;
    height: 80%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid gray;
}

.order-detail {
    display: inline-flex;
    height: 100%;
    width: 50%;
    position: absolute;
    top: 0;
    left: 35%;
    flex-direction: column;
    justify-content: center;

}


.order-price {
    width: 100%;
    height: 80px;
    top: 25px;
    background-color: #fff;
    position: relative;
   
}